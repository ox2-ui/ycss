{
  "name": "@ox2/ycss",
  "version": "1.4.0",
  "description": "Low-level CSS toolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/ox2/ycss"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run build:copy-files && npm run build:css && npm run build:minify && npm run build:important",
    "build:css": "postcss -c postcss.config.js",
    "build:minify": "postcss -u cssnano build/no-important/index.css -o build/index.min.css",
    "build:important": "postcss -u postcss-importantly build/no-important/index.css -o build/index.css",
    "build:copy-files": "babel-node ./scripts/copy-files.js",
    "clean:build": "rimraf build",
    "prebuild": "npm run clean:build",
    "start": "postcss -c postcss.config.js -w",
    "test:karma": "karma start test/karma.conf.js",
    "test:karma:watch": "karma start --no-single-run",
    "test:mocha": "(cd src; mocha index.test.js)",
    "test": "npm run test:mocha && npm run test:karma"
  },
  "devDependencies": {
    "autoprefixer": "^6.1.2",
    "babel": "^6.3.26",
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "css-loader": "^0.23.1",
    "css-mixed-properties": "^1.1.0",
    "cssnano": "^3.4.0",
    "cssstats": "^2.1.2",
    "fs-extra": "^0.30.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.19",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.6.1",
    "karma-cli": "^0.1.2",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.1",
    "karma-mocha-reporter": "^1.1.5",
    "karma-opera-launcher": "^1.0.0",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-safari-launcher": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.7.0",
    "mocha": "^3.0.0",
    "phantomjs-prebuilt": "^2.1.9",
    "postcss": "^5.0.14",
    "postcss-calc": "^5.2.0",
    "postcss-cli": "^2.5.0",
    "postcss-color-function": "^2.0.0",
    "postcss-custom-media": "^5.0.0",
    "postcss-custom-properties": "^5.0.1",
    "postcss-discard-comments": "^2.0.4",
    "postcss-easy-import": "^1.0.1",
    "postcss-import": "^8.1.2",
    "postcss-importantly": "0.0.7",
    "postcss-loader": "^0.8.0",
    "postcss-remove-root": "0.0.2",
    "postcss-reporter": "^1.3.0",
    "rimraf": "^2.5.3",
    "style-loader": "^0.13.0",
    "webpack": "^1.13.1"
  },
  "main": "index.css",
  "engines": {
    "npm": "^3.0.0"
  }
}
